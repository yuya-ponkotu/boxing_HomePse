

<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :yomigana, "読み方" %>
    <%= f.text_field :yomigana, class: 'form-control' %>

    <%= f.submit "作成", class: "btn btn-primary" %>
<% end %>
</div>
</div>